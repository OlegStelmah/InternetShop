@model InternetShop.Models.PostModels

@{
    ViewBag.Title = "NewPost";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
        <div class="content clr rel">
            <div class="clr">
                <h1 class="c000 x-large pding10 rel fleft">Подать объявление</h1>
                <div class="clr">
                    @Html.LabelFor(model => model.Header)
                    <div>
                        @Html.EditorFor(model => model.Header)
                        @Html.ValidationMessageFor(model => model.Header)
                    </div>
                </div>
                <div class="clr">
                    @{List<SelectListItem>
                        list = new List<SelectListItem>();
                        foreach (var item in (IEnumerable<InternetShop.Models.CategoryModels>)ViewBag.Categorys)
                        {
                            list.Add(new SelectListItem() { Text = item.Name, Value = item.Id });
                        }
                        @Html.DropDownListFor(md => Model.CategoryId, list);
                    }
                </div>
                <div class="clr">
                    @Html.LabelFor(model => model.Price)
                    <div>
                        @Html.EditorFor(model => model.Price)
                        @Html.ValidationMessageFor(model => model.Price)
                    </div>
                    </div>
                <div class="clr">
                    @Html.LabelFor(model => model.Description)
                    <div>
                        @Html.TextAreaFor(model => model.Description)
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                </div>
                <div>
                    <input type="submit" value="Добавить" />
                </div>
                </div>
            </div>
}
<div>
    @Html.ActionLink("Вернуться к списку", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src='@Url.Content("~/Scripts/jquery-1.12.4.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")' type="text/javascript"></script>
<script>
    $(document).ready(function () {

        $.ajaxSetup({ cache: false });

        $(".viewDialog").on("click", function (e) {
            e.preventDefault();

            $("<div></div>")
                .addClass("dialog")
                .appendTo("body")
                .dialog({
                    title: $(this).attr("data-dialog-title"),
                     close: function () { $(this).remove() },
                    modal: true
                })
                .load(this.href);
        });
    });
</script>

@model InternetShop.Models.Container
@{
    ViewBag.Title = "EditPost";
}

<div class="col-md-6 col-md-offset-3">
    <div>
        @Html.LabelFor(model => model.Post.Header)
        <div>
            @Html.EditorFor(model => model.Post.Header)
            @Html.ValidationMessageFor(model => model.Post.Header)
        </div>
    </div>
    <div>
        @Html.LabelFor(model => model.Post.Price)
        <div>
            @Html.EditorFor(model => model.Post.Price)
            @Html.ValidationMessageFor(model => model.Post.Price)
        </div>
    </div>
    <div>
        @Html.LabelFor(model => model.Post.Description)
        <div>
            @Html.EditorFor(model => model.Post.Description)
            @Html.ValidationMessageFor(model => model.Post.Description)
        </div>
    </div>
    <div class="clr">
        @Html.ActionLink("Добавить хараткеристику", "CreateCharacteristic", "Home", new { id = this.Model.Post.Id},
            new { @class = "viewDialog", data_dialog_title = "Новая характеристика" })
    </div>
        @Html.ActionLink("Изображение", "AttachImage", new { id = Model.Post.Id })
    <div>
        <input type="submit" value="Добавить" />
    </div>
    
</div>

<script src='@Url.Content("~/Scripts/jquery-1.12.4.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")' type="text/javascript"></script>
<script>
    $(document).ready(function () {

        $.ajaxSetup({ cache: false });

        $(".viewDialog").on("click", function (e) {
            e.preventDefault();

            $("<div></div>")
                .addClass("dialog")
                .appendTo("body")
                .dialog({
                    title: $(this).attr("data-dialog-title"),
                     close: function () { $(this).remove() },
                    modal: true
                })
                .load(this.href);
        });
    });
</script>